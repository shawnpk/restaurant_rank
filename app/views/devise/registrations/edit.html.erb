<div class="breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <h1>
          Edit User Info
        </h1>
      </div>
    </div>
  </div>
</div>
<!--breadcrumbs end-->

<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

      <%= f.input :first_name, required: true, autofocus: true,
          label: false, placeholder: 'First Name' %>
      <%= f.input :last_name, required: true,
          label: false, placeholder: 'Last Name' %>
      <%= f.input :username, required: true,
          label: false, placeholder: 'Username' %>
      <%= f.input :email, required: true,
          label: false, placeholder: 'Email' %>
      <%= f.input :city, required: true,
          label: false, placeholder: 'City' %>
      <%= f.input :state_provence, required: true,
          label: false, placeholder: 'State or Provence' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :current_password,
      hint: "we need your current password to confirm your changes",
      required: true, label: false, placeholder: 'Current Password' %>
      <%= f.input :password, autocomplete: "off",
      hint: "leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, required: false %>

      <%= f.button :submit, "Update" %>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %><br /><br />
</div>
