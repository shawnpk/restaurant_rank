<div class="container">
  <h2>Sign Up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <%= f.input :first_name, required: true, autofocus: true,
      label: false, placeholder: 'First Name' %>
      <%= f.input :last_name, required: true,
      label: false, placeholder: 'Last Name' %>
      <%= f.input :username, required: true,
      label: false, placeholder: 'Username' %>
      <%= f.input :email, required: true,
      label: false, placeholder: 'Email' %>
      <%= f.input :password, required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: 'Password' %>
      <%= f.input :password_confirmation, required: true,
      label: false, placeholder: 'Password Confirmation' %>

      <%= f.button :submit, "Sign up" %>
  <% end %>

  <%= render "devise/shared/links" %><br />
</div>
